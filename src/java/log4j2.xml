<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>
    <NoSql name="databaseAppender">
        <MongoDb databaseName="dev_app" collectionName="error_logs"
            server="localhost"
            />
    </NoSql>
  </Appenders>
  <Loggers>
    <Root level="error">
      <AppenderRef ref="STDOUT"/>
    </Root>
    <Root level="debug">
      <AppenderRef ref="STDOUT"/>
    </Root>
    <Root level="trace">
      <AppenderRef ref="STDOUT"/>
    </Root>
    <Root level="info">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>